<% @thumb += "?r=#{rand}"%>
<div id="textPreview">
  <%= image_tag @image + "?r=#{rand}", :id => "image", :style => image_area_to_css(@template.image_area) %>
  <%= image_tag @template.picture_url, :id => "textTemplate" %>
</div>
<div id="effectControls">
  <div class="topControls">
    <input type="button" value="BACK" class="back" onclick="window.location = '/book_creator/preview'">
    <input type="button" value="OK" class="submit" onclick="submitTextPage(); return false;">
  </div>
  <div id="templates">
    <div style="width: <%=135 * @templates.length %>px">
  <% @templates.each do |template| 
        is_current = @template.id == template.id ? 'selected' : ''
      %>
      <div class="composite"><a href="#">
          <%= image_tag @thumb, :class => "thumb #{is_current}" %>
          <%= image_tag(template.picture_url + "?r=#{rand}", :class => "#{is_current} preview", 'data-id' => template.id, 'data-url' => template.picture_url, 'data-crop' => image_area_to_css(template.image_area) )%></a></div>
  <% end %>
    </div>
  </div>
</div>
