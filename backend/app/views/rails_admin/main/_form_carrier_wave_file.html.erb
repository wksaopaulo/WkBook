  <% if field.value %>
    <div class="row">'
      <%= field.bindings[:object].send("#{field.name}_url") %><br />
      <%= check_box(field.abstract_model.to_param.singularize, "remove_#{field.name}") %>
      <%= label_tag("#{field.abstract_model.to_param.singularize}_remove_#{field.name}", "Remove existing #{field.label.downcase}", :class => "inline") %>
    </div>
  <% end %>
  <div class="row">
    <%= file_field(field.abstract_model.to_param.singularize, field.name, :class => "fileUploadField #{field.has_errors? ? "errorField" : nil}") %>
    <%= hidden_field(field.abstract_model.to_param.singularize, "#{field.name}_cache") %>
  </div>

