.logout {
  float: right;
  padding: 3px;
  font-size: 12px;
}
#createBook {
  display: block;
  position: absolute;
  left: 50%;
  top: 50%;
  margin: -168px -322px;
  width: 645px;
  height: 315px;
  
  #w, #plus, #k, .submit {
    position: absolute;
  }
  
  #w, #k {
    
    width: 260px;
    height: 275px;
  
    .hit{
      width:100%;
      height:100%;
      position: absolute;
      top: 0;
    }
  
    img{
      position: absolute;
    }
  
    .userInput img{
      display: none;
    }
  
    input[type=file]{
      position: absolute;
      z-index: 1000;
      width: 30px;
      height: 30px;
      opacity: 0;
      cursor: pointer;
    }
  }
  
  #plus{
    left: 50%;
    top: 120px;
    margin-left: -50px;
  }
  
  #k {
    right: 0;
  }
  
  #textPanel{
    display:none;
    width: 100%;
    height: 100%;
    position: absolute;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 1001;
  
    label{
      font-size: 32px;
      position: absolute;
      top: -35px;
    }
    textarea{
      opacity: 0.95;
      position: absolute;
      top: 35px;
      width: 625px;
      height: 295px;
      padding: 10px;
      font-size: 12px;
    }

    input[type=text]{
      width: 625px;
      padding: 10px;
      position: absolute;
      border: none;
      outline: none;
    }
    input[type=button]{
      position: absolute;
      right: 0;
      top: 360px;
      border: none;
      padding: 5px 15px;
      background-color: white;
    }

    .remainingWords{
      position: absolute;
      top: 356px;
      color: white;
      font-size: small;
    }

  }
  
  .submit{
    bottom: 0;
    right: 90px;
  }
  }

#textPreview {
  height: 70%;
  position: relative;
  overflow: hidden;

  img {
    height:100%;
    position: absolute;
    left: 0;
  }
}
#swf {
  position: absolute;
  left: 0;
}


/* PREVIEW */
#effectControls {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: url(<%= asset_path('black_80.png') %>);
  

  .jspDrag {
    background: url(/assets/scroll_drag.png) #aaa no-repeat center center;
    border-left: solid 2px #777;
    border-top: solid 1px #aaa;
    border-right: solid 2px #777;
  }
  .jspDrag.jspHover { background-color: #CCC }
  .jspTrack {
    background-color: #555;
  }
  .jspHorizontalBar { height: 12px; }
  .jspArrow {
    background: url(/assets/arrow_left.png) #aaa no-repeat center center;
    border: solid 1px #a1a1a1;
  }
  .jspArrowRight {
    background: url(/assets/arrow_right.png) #aaa no-repeat center center;
  }

  #effectAmount, #textColor {
    height: 5px;
    margin-top: 2px;
  }
  .ui-slider {
    border-radius: 0;
    background: #555;
    border: none;
  }
  .ui-slider-handle{
    border-radius: 0;
    width: 13px;
    height: 13px;
    background: url(/assets/scroll_drag.png) #aaa no-repeat center center;
  }


  .topControls {
  
    $buttonWidth: 50px;
    width: 95%;
    min-height: 10px;
    margin: 10px auto;
    padding-right: $buttonWidth+5px;
    position: relative;

      
    .submit, .back {
      border: solid 1px #6F6F6F;
      background-color: #7D7D7D;
      float: right;
      width: $buttonWidth;
      position: absolute;
      right: 0;
      top: -3px;
    }
    .back {
      right: 55px;
    }


  }
  
  #templates {
    overflow-x: scroll;
    overflow-y: hidden;
    height: 120px;
  }

  #textColor {
    width: 99%;
    margin: 10px auto;
  }

  $thumbHeight: 80px;

  .composite{ 
    position: relative; 
    display: block;
    float: left;
  }
  .preview {
    position: absolute;
    z-index: 99999;
    left: 0;
    top: 0;
  }

  #templates{
    img {
      /*box-shadow: 5px 5px 5px #ccc;*/
      height: $thumbHeight;
      margin: 5px;
    }

    img.selected {
      border: 2px solid #fff;
      height: $thumbHeight - 4;
    }
  }
  
}

#wait {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 99999999;
  left: 0;
  top: 0;
  padding-left: 50%;
  padding-top: 25%;
  display: none;
  background-image: url(<%= asset_path "black_80.png" %>);

  img {
   margin-left: -431px; 
   margin-top: -232px;
  }
}
