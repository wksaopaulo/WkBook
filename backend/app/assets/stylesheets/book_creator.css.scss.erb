.logout {
  float: right;
  padding: 3px;
  font-size: 12px;
}
#createBook {
  display: block;
  position: absolute;
  left: 50%;
  top: 50%;
  margin: -168px -322px;
  width: 645px;
  height: 315px;
  
  #w, #plus, #k, .submit {
    position: absolute;
  }
  
  #w, #k {
    
    width: 260px;
    height: 275px;
  
    .hit{
      width:100%;
      height:100%;
      position: absolute;
      top: 0;
    }
  
    img{
      position: absolute;
    }
  
    .userInput img{
      display: none;
    }
  
    input[type=file]{
      position: absolute;
      z-index: 1000;
      width: 30px;
      height: 30px;
      opacity: 0;
      cursor: pointer;
    }
  }
  
  #plus{
    left: 50%;
    top: 120px;
    margin-left: -50px;
  }
  
  #k {
    right: 0;
  }
  
  #textPanel{
    display:none;
    width: 100%;
    height: 100%;
    position: absolute;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 1001;
  
    label{
      font-size: 32px;
      position: absolute;
      top: -35px;
    }
    textarea{
      opacity: 0.95;
      position: absolute;
      top: 35px;
      width: 625px;
      height: 295px;
      padding: 10px;
      font-size: 12px;
    }

    input[type=text]{
      width: 625px;
      padding: 10px;
      position: absolute;
      border: none;
      outline: none;
    }

  }
  
  .submit{
    bottom: 0;
    right: 90px;
  }

}

#textPreview {
  height: 70%;
  position: relative;

  img {
    height:100%;
    position: absolute;
    left: 0;
  }
}


/* PREVIEW */
#effectControls {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: url(<%= asset_path('black_80.png') %>);
  

  .jspDrag {
    background-color: #AAA;
  }
  .jspDrag.jspHover { background-color: #CCC }
  .jspTrack {
    background-color: #7D7D7D;
  }
  .jspHorizontalBar { height: 8px; }

  #effectAmount, #textColor {
    opacity: 0.5;
    height: 5px;
    margin-top: 2px;
  }
  .ui-slider-handle{
    width: 13px;
    height: 13px;
  }


  .topControls {
  
    $buttonWidth: 50px;
    width: 95%;
    min-height: 10px;
    margin: 10px auto;
    padding-right: $buttonWidth+5px;
    position: relative;

      
    .submit {
      border: solid 1px #6F6F6F;
      background-color: #7D7D7D;
      float: right;
      width: $buttonWidth;
      position: absolute;
      right: 0;
      top: -3px;
    }

  }
  
  #templates {
    overflow-x: scroll;
    overflow-y: hidden;
    height: 120px;
  }

  #textColor {
    width: 99%;
    margin: 10px auto;
  }

  $thumbHeight: 80px;

  td{ position: relative; }
  .preview {
    position: absolute;
    z-index: 99999;
    left: 0;
    top: 0;
  }
  img {
    /*box-shadow: 5px 5px 5px #ccc;*/
    height: $thumbHeight;
    margin: 5px;
  }

  img.selected {
    border: 2px solid #fff;
    height: $thumbHeight - 4;
  }
}
