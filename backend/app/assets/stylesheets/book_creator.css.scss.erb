.logout {
  float: right;
  padding: 3px;
  font-size: 12px;
}
#createBook {
  display: block;
  position: absolute;
  left: 50%;
  top: 50%;
  margin: -168px -322px;
  width: 645px;
  height: 315px;
  
  #w, #plus, #k, .submit {
    position: absolute;
  }
  
  #w, #k {
    
    width: 260px;
    height: 275px;
  
    .hit{
      width:100%;
      height:100%;
      position: absolute;
      top: 0;
    }
  
    img{
      position: absolute;
    }
  
    .userInput img{
      display: none;
    }
  
    input[type=file]{
      position: absolute;
      z-index: 1000;
      width: 30px;
      height: 30px;
      opacity: 0;
      cursor: pointer;
    }
  }
  
  #plus{
    left: 50%;
    top: 120px;
    margin-left: -50px;
  }
  
  #k {
    
    right: 0;
  
    textarea {
      width: 250px;
      height: 265px;
      padding: 5px;
      display: none;
      position: absolute;
      border: none;
      outline: none;
    }
  
  }
  
  #textPanel{
    display:none;
    width: 100%;
    height: 100%;
    position: absolute;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 1001;
  
    label{
      font-size: 32px;
      position: absolute;
      top: -32px;
    }
    textarea{
      opacity: 0.95;
      position: absolute;
      top: 0;
      width: 625px;
      height: 295px;
      padding: 10px;
      font-size: 12px;
    }
  }
  
  .submit{
    bottom: 0;
    right: 90px;
  }

}


/* PREVIEW */
#effectControls {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: url(<%= asset_path('black_80.png') %>);

  .jslider{
    width: 95%;
    height: 5px;
    margin: 10px auto;
    opacity: 0.5;
  }
  .ui-slider-handle{
    width: 13px;
    height: 13px;
  }

  #templates {
    overflow: hidden;
    height: 80px;
  }

  img {
    /*box-shadow: 5px 5px 5px #ccc;*/
    max-height: 60px;
    margin: 5px;
  }

  img.selected {
    border: 2px solid #fff;
  }
}
